# Documentor Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# OCR API Configuration
# =============================================================================

# Dots.OCR API Configuration (REQUIRED - NO DEFAULTS)
DOTS_OCR_BASE_URL=
DOTS_OCR_API_KEY=
DOTS_OCR_MODEL_NAME=
DOTS_OCR_TEMPERATURE=0.1
DOTS_OCR_MAX_TOKENS=4096
DOTS_OCR_TIMEOUT=30

# Qwen2.5-VL API Configuration (REQUIRED - NO DEFAULTS)
QWEN_BASE_URL=
QWEN_API_KEY=
QWEN_MODEL_NAME=
QWEN_TEMPERATURE=0.1
QWEN_MAX_TOKENS=4096
QWEN_TIMEOUT=30

# OCR General Settings
OCR_MAX_IMAGE_SIZE=2048
OCR_MIN_CONFIDENCE=0.5

# =============================================================================
# Document Processing Configuration
# =============================================================================

# File Processing Settings
RECURSIVE=true
EXTRACT_ARCHIVES=true
AUTO_WATCH=false
CREATE_HIERARCHY=true
BATCH_SIZE=10
SAVE_PROCESSED_DOCS=false

# File Filters
SUPPORTED_EXTENSIONS=.txt,.pdf,.png,.jpg,.jpeg
MAX_FILE_SIZE_MB=100

# Text Processing
TXT_ENCODING=utf-8

# =============================================================================
# Output Configuration
# =============================================================================

# Output Directory (leave empty for no automatic saving)
OUTPUT_DIRECTORY=./output

# Logging
LOG_LEVEL=INFO

# =============================================================================
# Development/Debug Settings
# =============================================================================

# Enable debug mode for more verbose logging
DEBUG=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false


